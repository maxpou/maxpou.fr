{
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "printWidth": 80,
  "proseWrap": "always",
  "semi": false,
  "singleQuote": true,
  "useTabs": false,

  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": ["*.md", "*.mdx"],
      "options": {
        "printWidth": 100
      }
    }
  ]
}
