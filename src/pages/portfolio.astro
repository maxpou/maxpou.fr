---
import Layout from '../components/Layout.astro'
import ProjectCard from '../components/ProjectCard.astro'

import { projects } from '../content/projects'

const activeProjects = projects.filter(project => !project.isDead);
const deadProjects = projects.filter(project => project.isDead);
---

<Layout
  title="Runner Dashboard - Pace & Nutrition Calculator"
  description="Convert running pace (min/km) to speed (km/h), see estimated finish times, and plan your race nutrition strategy."
  seo={{ type: 'website' }}
>
  <div class="mx-auto max-w-6xl">
    <h1
      class="mb-2 text-4xl font-bold text-gray-900 dark:text-white md:text-5xl"
    >
      Portfolio
    </h1>
      <p class="mb-8 text-lg text-gray-600 dark:text-gray-300">
        A collection of applications and GitHub projects Iâ€™ve built.
      </p>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 mb-8">
      {activeProjects.map((project) => <ProjectCard project={project} />)}
    </div>

    <h2 class="text-2xl font-bold">ðŸª¦ Graveyard</h2>
    <p class="text-gray-600 dark:text-gray-300">Projects that are no longer maintained.</p>
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {deadProjects.map((project) => <ProjectCard project={project} />)}
    </div>
  </div>
</Layout>
