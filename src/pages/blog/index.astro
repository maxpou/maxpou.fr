---
import { type CollectionEntry, getCollection } from 'astro:content'
import type { Page } from 'astro'
import type { JsonLdDocument } from 'jsonld'
import BlogCard from '../../components/BlogCard.astro'
import Layout from '../../components/Layout.astro'
import Pagination from '../../components/Pagination.astro'
import StructuredData from '../../components/StructuredData.astro'
import { PAGE_SIZE, SITE_URL } from '../../consts'

const posts = (await getCollection('blog'))
  .filter(post => !post.data.unlisted)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())

const page: Page<CollectionEntry<'blog'>> = {
  data: posts.slice(0, PAGE_SIZE),
  start: 0,
  end: PAGE_SIZE,
  total: posts.length,
  currentPage: 1,
  size: PAGE_SIZE,
  lastPage: Math.ceil(posts.length / PAGE_SIZE),
  // @ts-expect-error
  url: {
    current: '/blog',
    next: '/blog/pages/2',
    prev: undefined,
  },
}

const blogStructuredData: JsonLdDocument = {
  '@context': 'https://schema.org',
  '@type': 'Blog',
  name: "Maxence Poutord's Blog",
  description: 'Articles about software development, technology, and life',
  url: `${SITE_URL}/blog`,
  publisher: {
    '@type': 'Person',
    name: 'Maxence Poutord',
    url: SITE_URL,
  },
  blogPost: page.data.map(post => ({
    '@type': 'BlogPosting',
    headline: post.data.title,
    description: post.data.description,
    datePublished: post.data.date.toISOString(),
    url: `${SITE_URL}/blog/${post.slug}`,
  })),
}
---

<Layout
  title={`Maxence Poutord's Blog - Page ${page.currentPage}`}
  description={`Maxence Poutord's articles, page ${page.currentPage} of ${page.lastPage}`}
  seo={{
    type: 'website',
  }}
>
  <StructuredData data={blogStructuredData} />
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
    {page.data.map(post => <BlogCard post={post} />)}
  </div>
  <Pagination page={page} />
</Layout>
