---
import type { JsonLdDocument } from 'jsonld'
import BlogCard from '../components/BlogCard.astro'
import Layout from '../components/Layout.astro'
import PageTitle from '../components/PageTitle.astro'
import StructuredData from '../components/StructuredData.astro'

import { getCollection } from 'astro:content'

const posts = (await getCollection('blog'))
  .filter(post => !post.data.unlisted)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5)

const errorPageStructuredData: JsonLdDocument = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Page Not Found',
  description: "The page you're looking for doesn't exist.",
  url: Astro.url.toString(),
  mainEntity: {
    '@type': 'WebPage',
    name: '404 Error Page',
    description: 'Page not found error',
  },
}
---

<Layout
  title="Page Not Found - Maxence Poutord"
  description="The page you're looking for doesn't exist."
  seo={{
    type: 'website',
  }}
>
  <StructuredData data={errorPageStructuredData} />
  <div class="flex flex-col items-center">
    <span role="img" aria-label="Ghost" class="block text-[7em]">ðŸ‘»</span>
    <PageTitle>Page Not Found</PageTitle>

    <p class="dark:text-white text-xl">
      Looks like you've followed a broken link or entered a URL that doesn't
      exist on this site.
    </p>
  </div>
  <div class="m-auto max-w-screen-xl pt-12">
    <h2 class="pb-4 text-2xl font-bold dark:text-white">
      Looking for something to read?
    </h2>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
      {posts.map(p => <BlogCard post={p} />)}
    </div>
  </div>
</Layout>
